<html>
  <div class="container">
    <div class="bs-docs-section">
      <div class="row">
        <div class="col-lg-12">
          <div class="page-header">
            <br><h1 id="forms">Formulaire Création Evénement</h1>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="bs-component">
            <form>
              <fieldset>
                <div class="form-group">
                  <label for="exampleInputEmail1" class="form-label mt-4">Titre de l'événement</label>
                  <input type="title" class="form-control" id="exampleInputEmail1" aria-describedby="titreHelp" placeholder="Mon super titre">
                  <small id="titreHelp" class="form-text text-muted">Le titre de l'évenement doit faire minimum 6 caractères.</small>
                </div>
                

                <div class="form-group">
                  <label for="exampleTextarea" class="form-label mt-4">Description de votre événement</label>
                  <textarea class="form-control" id="event_description" rows="3" placeholder="Lors de cet événement, vous pourrez découvrir les arts du cirque..." ></textarea>
                </div>

                <div class="form-group">
                  <label for="place" class="form-label mt-4">Lieu</label>
                  <input type="place" class="form-control" id="place" placeholder="Dans les champs de vignes">
                </div>


                <div class="form-group">
                  <label for="exampleSelect1" class="form-label mt-4">Example select</label>
                  <select class="form-select" id="exampleSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                  </select>
                </div>

                <div class="form-group">
                  <label class="form-label mt-4">Prix</label>
                  <div class="form-group">
                    <div class="input-group mb-3">
                      <span class="input-group-text">€</span>
                      <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    </div>
                  </div>
                </div>
              </fieldset>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</html>